datasource db {
  provider = "mysql" // O el proveedor que estés utilizando
  url      = env("DATABASE_URL") // Asegúrate de que esta variable esté en tu .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   // Agregar el campo de rol
  nombre    String   // Agregar el campo de nombre
}


model Calendario {
  id     Int    @id @default(autoincrement())
  fecha  DateTime
  hora   String
  estado String // 'reservado' o 'libre'
}

model Cita {
  id            Int      @id @default(autoincrement())
  email         String
  fecha         DateTime
  hora          String
  descripcion   String
  estado        String   // 'pendiente', 'confirmada', etc.
  doctorAsignado String   @default("Pendiente de asignar") // Nuevo campo con valor por defecto
}

